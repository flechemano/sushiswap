{
  "extends": ["@tsconfig/strictest/tsconfig", "@tsconfig/node18/tsconfig"],
  "include": ["src"],
  "exclude": [
    "node_modules", 
    "dist", 
    ".turbo",
    "src/**/*.test.ts",
    "src/**/*.test-d.ts",
    "src/**/*.bench.ts"
  ],
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "lib": ["ESNext"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ESNext",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  }
}
